{
  "name": "remark-midas",
  "version": "5.1.1",
  "description": "remark plugin to highlight CSS code blocks with midas",
  "license": "MIT",
  "keywords": [
    "unified",
    "remark",
    "plugin",
    "mdast",
    "markdown",
    "css",
    "highlight",
    "syntax",
    "midas"
  ],
  "repository": "remarkjs/remark-midas",
  "bugs": "https://github.com/remarkjs/remark-midas/issues",
  "author": "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
  "contributors": [
    "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "dist",
    "src/index.js"
  ],
  "dependencies": {
    "midas": "^2.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "2.0.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "browserify": "^16.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-html": "^9.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tinyify": "^2.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "format": "remark *.md -qfo && prettier \"**/*.js\" --write && xo --fix",
    "compile": "babel src --out-dir dist --ignore src/**/__tests__",
    "build-bundle": "browserify . -s remarkMidas -o remark-midas.js",
    "build-mangle": "browserify . -s remarkMidas -p tinyify -o remark-midas.min.js",
    "bundle": "npm run build-bundle && npm run build-mangle",
    "test-api": "ava",
    "test-coverage": "nyc --reporter lcov ava",
    "test": "npm run format && npm run compile && npm run bundle && npm run test-coverage"
  },
  "browserslist": "> 2.5%, node 6",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
