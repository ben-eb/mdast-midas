{
  "name": "remark-midas",
  "version": "5.0.0",
  "description": "Highlight CSS in Markdown files with midas.",
  "license": "MIT",
  "keywords": [
    "css",
    "highlight",
    "syntax",
    "midas",
    "markdown",
    "remark"
  ],
  "repository": "remarkjs/remark-midas",
  "bugs": "https://github.com/remarkjs/remark-midas/issues",
  "author": "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
  "contributors": [
    "Ben Briggs <beneb.info@gmail.com> (http://beneb.info)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "dist/index.js",
  "module": "src/index.js",
  "files": [
    "license",
    "dist",
    "src"
  ],
  "dependencies": {
    "midas": "^2.0.0",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "ava": "1.0.0-rc.2",
    "babel-plugin-add-module-exports": "^1.0.0",
    "del-cli": "^1.1.0",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-html": "^9.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "format": "remark *.md -qfo && prettier \"**/*.js\" --write && xo --fix",
    "build": "babel src --out-dir dist --ignore src/__tests__",
    "test-api": "ava",
    "test-coverage": "nyc --reporter lcov ava",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "browserslist": "> 2.5%, node 6",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
