{
  "name": "remark-midas",
  "version": "2.0.0",
  "description": "Highlight CSS in Markdown files with midas.",
  "main": "dist/index.js",
  "files": [
    "LICENSE-MIT",
    "dist"
  ],
  "scripts": {
    "copy-fixtures": "ncp src/__tests__/fixtures dist/__tests__/fixtures",
    "pretest": "eslint src",
    "prepublish": "del-cli dist && babel src --out-dir dist --ignore /__tests__/",
    "test": "babel src --out-dir dist && npm run copy-fixtures && ava dist/__tests__"
  },
  "keywords": [
    "css",
    "highlight",
    "syntax",
    "midas",
    "markdown",
    "remark"
  ],
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.11.0",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-tape-runner": "^2.0.0",
    "del-cli": "^0.2.0",
    "eslint": "^2.1.0",
    "ncp": "^2.0.0",
    "remark": "^4.0.0",
    "remark-html": "^3.0.0"
  },
  "homepage": "https://github.com/ben-eb/remark-midas",
  "author": {
    "name": "Ben Briggs",
    "email": "beneb.info@gmail.com",
    "url": "http://beneb.info"
  },
  "repository": "ben-eb/remark-midas",
  "dependencies": {
    "midas": "^1.2.0",
    "unist-util-visit": "^1.0.0"
  }
}
